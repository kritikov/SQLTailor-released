<Window x:Class="SQLTailor.Views.DocumentViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLTailor.Views"
        xmlns:Classes="clr-namespace:SQLTailor.Classes"
        mc:Ignorable="d"
        Title="document" Height="450" Width="800" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    
    <Grid>
        <Classes:BindableRichTextBox IsReadOnly="True"
                                     Document="{Binding Document, Mode=OneWay}"
                                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
